<%- include('includes/header') %>
      <div class="row">
        <%- include('includes/sidemenu') %>
        <div class="col-lg-9">
          <% if(msg!="") {  %>
            <div class="alert alert-primary" role="alert">
                <strong><%= msg %></strong>
            </div>
            <% }  %>
            <form action="/users/sendmoney" method="post">
                <input type="hidden" value="<%= result1[0].phone %>" readonly
                    class="form-control" name="phone1" id="" aria-describedby="helpId" placeholder="">
                  
                <div class="form-group">
                  <label for="">Phone</label>
                  <input type="text" 
                    class="form-control" name="phone2" id="" aria-describedby="helpId" placeholder="">
                  <small id="helpId" class="form-text text-muted">*</small>
                </div>
                <div class="form-group">
                    <label for="">Amount</label>
                    <input type="number" required
                      class="form-control" name="amount" id="" aria-describedby="helpId" placeholder="">
                    <small id="helpId" class="form-text text-muted">*</small>
                  </div>
                  <div class="form-group">
                    <label for="">Purpose</label>
                    <input type="text " required
                      class="form-control" name="purpose" id="" aria-describedby="helpId" placeholder="">
                    <small id="helpId" class="form-text text-muted">*</small>
                  </div>
                 
                  <button type="submit" class="btn btn-primary">Send Money</button>
            </form>
        </div>
      </div>
      <%- include('includes/footer') %>